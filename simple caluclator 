num_1 = int(input("enter your first number:"))
operator = input("enter your operator(+,-,*,/):")
num_2 = int(input("enter your second number:"))

if operator == "+" or "-" or "*" or "/" and num_2!=0:
    print(f"{num_1}{operator}{num_2}")

elif operator == "/" and num_2 == 0 :
    print("you cannot divide any thing by zero")

else:
    print(f"{operator} is not a valid operator,enter a valid operator")